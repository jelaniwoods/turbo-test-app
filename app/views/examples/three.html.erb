<turbo-frame id="custom-confirmation">
  <script>
    Turbo.config.forms.confirm = () => {
      let dialog = document.querySelector("dialog")
      dialog.showModal()
      return new Promise((resolve, reject) => {
        dialog.addEventListener("close", () => {
          resolve(dialog.returnValue == "confirm")
        }, { once: true })
      })
    }
  </script>
</turbo-frame>
